<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jcorreaT3A.Views.vUno"
             Title="vUno">
    
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Tipo de Identificación"/>
        <Picker x:Name="pkTipoId" Title="Seleccionar tipo">
            <Picker.Items>
                <x:String>CI</x:String>
                <x:String>RUC</x:String>
                <x:String>PASAPORTE</x:String>
            </Picker.Items>
        </Picker>

        <Entry x:Name="txtIdentificacion"
               Placeholder="Número de identificación"
               Keyboard="Numeric"/>

        <Entry x:Name="txtNombres"
               Placeholder="Nombres"/>

        <Entry x:Name="txtApellidos"
               Placeholder="Apellidos"/>
        
    </VerticalStackLayout>
</ContentPage>